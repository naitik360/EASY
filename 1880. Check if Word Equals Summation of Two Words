class Solution {
public:
    bool isSumEqual(string s1, string s2, string s3) {
        int n1=0,n2=0,n3=0;
        
        for(int i=0;i<s1.size();i++)
        {
            n1=n1*10+(s1[i]-'a');
        }
        
        for(int i=0;i<s2.size();i++)
        {
            n2=n2*10+(s2[i]-'a');
        }
        
        for(int i=0;i<s3.size();i++)
        {
            n3=n3*10+(s3[i]-'a');
        }
       
        return (n1+n2==n3);
    }
};
