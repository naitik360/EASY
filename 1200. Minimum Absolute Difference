class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& v) {
        sort(v.begin(),v.end());
        int ans=INT_MAX;
         vector<vector<int>> c;
        for(int i=0;i<v.size()-1;i++)
        {
            ans=min(ans,v[i+1]-v[i]);
        }
        
        for(int i=0;i<v.size()-1;i++)
        {
            if(v[i+1]-v[i]==ans)
                c.push_back({v[i],v[i+1]});
        }
      return c;
    }
};
